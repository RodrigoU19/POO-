package pvp;

//Aca se crea la clase Personaje a la cual se le asignaran los respectivos atributos necesarios.
public class Personaje {
    private String nombre;
    private int ataque;
    private int salud;
    private int defensa;
    private double ta;
    
    //Este seria un metodo constructor el cual sirve para agregar mÃ¡s orden al programa construyendo datos asignados a los atributos
    public Personaje(){
        
    String nombre="Peleador1";
    int ataque=40;
    int salud=300;
    int defensa=10;
    double ta=0.9;
    }
    //A continuacion se realiza una encapsulacion de metodos, esto es fundamental tanto para el orden como para el funcionamiento correcto del programa
    public String getNombre()
    {
        return this.nombre;
    }
    
    public void setNombre(String _nombre)
    {
        this.nombre=_nombre;
    }
    
    public int getSalud()
    {
        return this.salud;
    }
    
    public void setSalud(int _salud)
    {
        this.salud=_salud;
    }
    public int getAtaque(int _ataque)
    {
        return this.ataque;
    }
    public void setAtaque()
    {
        this.ataque=ataque;
    }
    
    public int getDefensa()
    {
        return this.defensa;
    }
    public void setDefensa(int _defensa)
    {
        this.defensa =_defensa;
    }
    public double getTa()
    {
        return this.ta;
    }
    public void setTa(double _ta)
    {
        this.ta=_ta;
    }
    
    //A continuacion se crean los respectivos metodos de la clase en este caso el metodo "Atacado"
    public void atacado(int _ataque){
        int danho =_ataque-this.defensa;
        int vidaRestante =this.salud;
        if(danho>=0){
        vidaRestante-=danho;
        System.out.println(this.nombre+" ha recibido un golpe... "+danho+"puntos de vida");
        }else{
            System.out.println(this.nombre+" ha recibido un golpe muy debil... levantate y ataca");
                }
        
    this.salud=vidaRestante;
    System.out.println(this.nombre+" tiene"+this.salud+" mas puntos de vida");
        
    }
    
     //A continuacion se crean los respectivos metodos de la clase en este caso el metodo "Esquivar"
    public void esquivar(){
    System.out.println(this.nombre+" logro esquivar el golpe");
    }
    
    
    
    public boolean Estado(){
        boolean vida = true;
        if(salud<=0) vida=false;
        return vida;
    } 
}
